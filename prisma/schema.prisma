generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_CONECTION_STRING")
}

enum Gender {
  Male
  Female
  Unknown
}

enum AccountRole {
  Admin
  Customer
  Stylish
}

enum AccountType {
  Google
  Basic
}

enum Rank {
  Bronze
  Glod
  Diamon
  Silver
}




model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String? @unique
  email String @unique
  
  gender Gender?
  role AccountRole @default(Customer)
  account_type AccountType @default(Basic)

  full_name String
  phone_number String?
  googleId String? @unique
  password String?
  avatar String
  date_of_birth DateTime?
  address String?
  rank Rank @default(Bronze)
  point Int?
  email_verified Boolean @default(false)

}

