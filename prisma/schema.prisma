generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_CONECTION_STRING")
}

enum Gender {
  MALE
  FEMALE
  UNKNOWN
}

enum AccountRole {
  ADMIN
  CUSTOMER
  STYLIST
}

enum AccountType {
  GOOGLE
  BASIC
}

enum Rank {
  SILVER
  BRONZE
  GLOD
  DIAMON
}




model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  
  gender Gender?
  role AccountRole @default(CUSTOMER)
  account_type AccountType @default(BASIC)

  full_name String
  phone_number String?
  googleId String? @unique
  password String?
  avatar String
  date_of_birth DateTime?
  address String?
  rank Rank @default(BRONZE)
  point Int?
  email_verified Boolean @default(false)

  access_token String @default("")
  refresh_token String @default("")

  deleted   Boolean  @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}


model Stylist {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  full_name String @unique
  phone_number String @unique
  email String @unique
  experience String @default("no experience")
  avatar String @default("https://www.shutterstock.com/image-vector/default-avatar-profile-icon-vector-600nw-1745180411.jpg")
  rating Float @default(0)
  work_schedule DateTime[] @default([])
  position String? @default("Stylist")
  gender Gender? @default(UNKNOWN)
  isActive Boolean @default(false)
  access_token String @default("")
  refresh_token String @default("")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
